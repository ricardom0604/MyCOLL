@page "/categories"

@using Microsoft.EntityFrameworkCore
@using MyCOLLDB.Entities
@using MyCOLLDB.Data


@inject IJSRuntime JsRuntime
@inject NavigationManager NavManager
@inject ApplicationDbContext DbContext

<PageTitle>Lista de Categorias</PageTitle>

<h3>Gestão de Categorias</h3>

<div>
    <button class="btn btn-primary" @onclick="CreateCategory">Criar Categoria</button>
</div>

@if(_parentCategories == null)
{
    <p><em>Carregando categorias...</em></p>
}
else if (_parentCategories.Count == 0)
{
    <p><em>Nenhuma categoria encontrada.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in _parentCategories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <button class="btn btn-sm btn-info" @onclick="() => EditCategory(category.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteCategory(category.Id)">Apagar</button>
                    </td>
                </tr>
                
                @if (_subCategoriesMap.ContainsKey(category.Id))
                {
                    foreach (var subCat in _subCategoriesMap[category.Id])
                    {
                        <tr>
                            <td style="padding-left: 2rem;">@subCat.Name</td>
                            <td>
                                <button class="btn btn-sm btn-info" @onclick="() => EditCategory(subCat.Id)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteCategory(subCat.Id)">Apagar</button>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}

@code {
    private List<Category>? _parentCategories;
    private Dictionary<int, List<Category>> _subCategoriesMap = new();
    
    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }
    private async Task LoadCategories()
    {
        var all = await DbContext.Categories
            .ToListAsync();
        
        _parentCategories = all
            .OrderBy(c => c.Name)
            .Where(c => c.ParentCategoryId == null)
            .ToList();
        
        _subCategoriesMap = all
            .Where(c => c.ParentCategoryId != null)
            .GroupBy(c => c.ParentCategoryId!.Value)
            .ToDictionary(g => g.Key, g => g.ToList());
    }

    private void CreateCategory()
    {
        NavManager.NavigateTo("/categories/create");
    }
    
    private void EditCategory(int categoryId)
    {
        NavManager.NavigateTo($"/categories/edit/{categoryId}");
    }
    private async Task DeleteCategory(int categoryId)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>("confirm", "Tem a certeza que deseja apagar esta categoria?");
        if (confirmed)
        {
            var category = await DbContext.Categories.FindAsync(categoryId);
            if (category != null)
            {
                DbContext.Categories.Remove(category);
                await DbContext.SaveChangesAsync();
                await LoadCategories();
                StateHasChanged();
            }
        }
    }

}
