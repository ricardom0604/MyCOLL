@page "/orders"

@using Microsoft.EntityFrameworkCore
@using MyCOLLDB.Entities
@using MyCOLLDB.Data


@inject IJSRuntime JsRuntime
@inject NavigationManager NavManager
@inject ApplicationDbContext DbContext

<PageTitle>Lista de Pedidos</PageTitle>

<h3>Gestão de Pedidos </h3>

@if(_ordersList == null)
{
    <p><em>Carregando pedidos...</em></p>
}
else if (_ordersList.Count == 0)
{
    <p><em>Nenhum pedido encontrado.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id do Pedido</th>
                <th>Cliente</th>
                <th>Data do Pedido</th>
                <th>Total (€)</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in _ordersList)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Client</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.Status</td>
                    <td>
                        <button class="btn btn-sm btn-info" @onclick="() => ViewOrderDetails(order.Id)">Ver Detalhes</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Order>? _ordersList;
    
    protected override async Task OnInitializedAsync()
    {
        _ordersList = await DbContext.Orders
            .Include(o => o.Client)
            .OrderByDescending(o => o.OrderDate)
            .ToListAsync();
    }
    
    private void ViewOrderDetails(int orderId)
    {
        NavManager.NavigateTo($"/orders/details/{orderId}");
    }
}
