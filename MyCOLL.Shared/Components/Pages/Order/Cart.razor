@page "/order/cart"
@using MyCOLL.Shared.Services
@using MyCOLL.Shared.Models.Dto

@inject IJSRuntime JsRuntime
@inject CartService CartService
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>My Cart</PageTitle>

<div class="container mt-4">
    <h3><i class="bi bi-cart3"></i> Shopping Cart</h3>

    @if (!CartService.Items.Any())
    {
        <div class="alert alert-warning mt-4 text-center">
            <h5>Your cart is empty.</h5>
            <a href="/" class="btn btn-primary mt-3">Back to Store</a>
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-md-8">
                @foreach (var item in CartService.Items)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="row g-0 align-items-center">
                            <div class="col-3 col-sm-2 text-center p-2">
                                @if (item.Product.Images.Any())
                                {
                                    <img src="@GetFullUrl(item.Product.Images.First().ImageUrl)" 
                                         class="img-fluid rounded" 
                                         style="max-height: 80px;" />
                                }
                                else
                                {
                                    <i class="bi bi-box fs-1 text-muted"></i>
                                }
                            </div>
                            
                            <div class="col-9 col-sm-10">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title mb-1">@item.Product.Name</h5>
                                        <small class="text-muted">Unit Price: @item.Product.FinalPrice.ToString("C")</small>
                                    </div>
                                    
                                    <div class="d-flex align-items-center gap-2">
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => DecreaseQty(item)">-</button>
                                        <span class="fw-bold mx-1">@item.Quantity</span>
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => IncreaseQty(item)">+</button>
                                        
                                        <button class="btn btn-sm btn-danger ms-2" @onclick="() => CartService.RemoveFromCart(item.Product)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm bg-light">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Summary</h4>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total Items:</span>
                            <strong>@CartService.Items.Sum(i => i.Quantity)</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5">Amount Due:</span>
                            <span class="fs-4 fw-bold text-success">@CartService.TotalAmount().ToString("0.00") â‚¬</span>
                        </div>

                        <AuthorizeView>
                            <Authorized>
                                <button class="btn btn-success w-100 py-2" @onclick="Checkout" disabled="@_isProcessing">
                                    @if (_isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span> <span>Processing...</span>
                                    }
                                    else
                                    {
                                        <span><i class="bi bi-check-circle"></i> Place Order</span>
                                    }
                                </button>
                            </Authorized>
                            <NotAuthorized>
                                <div class="alert alert-info small">
                                    You need to be logged in to checkout.
                                </div>
                                <a href="/login" class="btn btn-primary w-100">Log In</a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool _isProcessing = false;

    // Helper to resolve image URLs (same as Home)
    private string GetFullUrl(string path)
    {
        if (path.StartsWith("http")) return path;
        return $"{Http.BaseAddress}{path.TrimStart('/')}";
    }

    private static void IncreaseQty(CartItem item)
    {
        // Optional: check max stock here
        // if (item.Quantity < item.Product.Stock)
        item.Quantity++;
    }

    private static void DecreaseQty(CartItem item)
    {
        if (item.Quantity > 1)
        {
            item.Quantity--;
        }
    }

    private async Task Checkout()
    {
        _isProcessing = true;
        try
        {
            // 1. Build order DTO
            // Note: using OrderCreateDto to send to the API
            var orderDto = new OrderCreateDto
            {
                Items = CartService.Items.Select(i => new OrderItemDto 
                { 
                    ProductId = i.Product.Id, 
                    Quantity = i.Quantity 
                }).ToList()
            };

            // 2. Send to API
            var response = await Http.PostAsJsonAsync("api/order", orderDto);

            if (response.IsSuccessStatusCode)
            {
                CartService.Clear(); // Clear cart
                await JsRuntime.InvokeVoidAsync("alert", "Order placed successfully!");
                NavManager.NavigateTo("/order/history"); // Go to history
            }
            else
            {
                // Important: log API error content
                var errorContent = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"API ERROR ({response.StatusCode}): {errorContent}");
            
                await JsRuntime.InvokeVoidAsync("alert", 
                    $"Failed to create: {response.StatusCode}. Check the log.");
            }
        }
        catch (Exception ex)
        {
            await JsRuntime.InvokeVoidAsync("alert", $"Connection error: {ex.Message}");
        }
        finally
        {
            _isProcessing = false;
        }
    }
}
